{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Customer orders"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "order_number": {
      "type": "string",
      "unique": true
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::user.user"
    },
    "items": {
      "type": "json"
    },
    "total_amount": {
      "type": "decimal"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "confirmed", "shipped", "delivered", "cancelled"]
    },
    "shipping_address": {
      "type": "json"
    },
    "payment_status": {
      "type": "enumeration",
      "enum": ["pending", "paid", "failed"]
    },
    "razorpay_order_id": {
      "type": "string"
    }
  }
}


